@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <div class="main">
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <div>
                        @* 如果 ClaimsType 不一致，会导致获取的认证用户信息错误 *@
                        <span>@@ @context.User.Identity.Name <NavLink href="/logout">Logout</NavLink></span>

                    </div>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="/login">Login</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
